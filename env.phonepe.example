# PhonePe Configuration (v2 Standard Checkout)

# 1. Client ID (Used for Authentication)
# Found in PhonePe Dashboard > Developers > API Keys
NEXT_PUBLIC_PHONEPE_CLIENT_ID=your_client_id_here

# 2. Merchant ID (Used for Payment Transactions)
# Found in PhonePe Dashboard > Profile or top of the page
# Often different from Client ID (e.g., M12345 or YOURNAME)
NEXT_PUBLIC_PHONEPE_MERCHANT_ID=your_merchant_id_here

# 3. Client Secret (Used for Authentication)
# Found in PhonePe Dashboard > Developers > API Keys
PHONEPE_CLIENT_SECRET=your_client_secret_here

# 4. Client Version (Usually '1')
PHONEPE_CLIENT_VERSION=1

# 5. Environment (UAT or PRODUCTION)
# Use 'UAT' for Sandbox, 'PRODUCTION' for Live
PHONEPE_ENV=UAT

# 6. App URL (For callbacks and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 7. Supabase Service Role Key (For database updates)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
